<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.template.ReportsController"
            style="-fx-background-color: #1B1B2F; -fx-font-family: 'Verdana';">

    <!-- HEADER -->
    <top>
        <VBox spacing="15" style="-fx-background-color: #2C2C54; -fx-padding: 20;">
            <Label text="Student Academic Reports"
                   style="-fx-font-size: 24px; -fx-text-fill: #FFDC7B; -fx-font-weight: bold;"/>

            <!-- BUTTONS MOVED BELOW INPUT -->
            <HBox spacing="15" alignment="CENTER_LEFT">

                <Button onAction="#handleImportCSV" text="Import CSV"
                        style="-fx-background-color: #00ADB5; -fx-text-fill: #1B1B2F; -fx-font-size: 14px; -fx-font-weight: bold;"/>

                <Button onAction="#handleExportCSV" text="Export CSV"
                        style="-fx-background-color: #00ADB5; -fx-text-fill: #1B1B2F; -fx-font-size: 14px; -fx-font-weight: bold;"/>

                <Region HBox.hgrow="ALWAYS"/>

                <Label text="GPA Threshold:" style="-fx-text-fill: #FFFFFF; -fx-font-size: 14px;"/>
                <TextField fx:id="gpaThresholdField" prefWidth="120" promptText="0.0 - 4.0"
                           style="-fx-background-color: #2C2C54; -fx-text-fill: #FFD369; -fx-border-color: #FFDC7B; -fx-font-size: 13px;"/>

                <Button onAction="#handleLoadReport" text="Load Report"
                        style="-fx-background-color: #A29BFE; -fx-text-fill: #1B1B2F; -fx-font-size: 14px; -fx-font-weight: bold;"/>

                <Button onAction="#handleClearReport" text="Reset"
                        style="-fx-background-color: #FF7675; -fx-text-fill: #1B1B2F; -fx-font-size: 14px; -fx-font-weight: bold;"/>
            </HBox>
        </VBox>
    </top>

    <!-- TABLE WITH LABEL -->
    <center>
        <VBox spacing="10" style="-fx-padding: 25;">
            <Label text="Generated Student Reports" style="-fx-text-fill: #FFD369; -fx-font-size: 18px; -fx-font-weight: bold;"/>

            <TableView fx:id="reportTable" VBox.vgrow="ALWAYS"
                       style="-fx-control-inner-background: #2C2C54; -fx-border-color: #FFDC7B; -fx-text-fill: white; -fx-font-size: 13px;">

                <columns>
                    <TableColumn fx:id="idColumn" prefWidth="100" text="Student ID"/>
                    <TableColumn fx:id="nameColumn" prefWidth="150" text="Full Name"/>
                    <TableColumn fx:id="programmeColumn" prefWidth="120" text="Programme"/>
                    <TableColumn fx:id="levelColumn" prefWidth="80" text="Level"/>
                    <TableColumn fx:id="gpaColumn" prefWidth="80" text="GPA"/>
                    <TableColumn fx:id="emailColumn" prefWidth="170" text="Email Address"/>
                    <TableColumn fx:id="phoneColumn" prefWidth="120" text="Contact Number"/>
                    <TableColumn prefWidth="75" text="Enrollment Status"/>
                </columns>
            </TableView>
        </VBox>
    </center>

</BorderPane>